<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>School Management System</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Arial", sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        overflow: hidden;
      }

      .header {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 30px;
        text-align: center;
      }

      .header h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
      }

      .header p {
        font-size: 1.1em;
        opacity: 0.9;
      }

      .nav-tabs {
        display: flex;
        background: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
      }

      .nav-tab {
        flex: 1;
        text-align: center;
        padding: 15px;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 16px;
        transition: all 0.3s ease;
      }

      .nav-tab.active {
        background: white;
        border-bottom: 3px solid #4facfe;
        color: #4facfe;
      }

      .nav-tab:hover {
        background: #e9ecef;
      }

      .tab-content {
        display: none;
        padding: 30px;
      }

      .tab-content.active {
        display: block;
      }

      .form-section {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 10px;
        margin-bottom: 30px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
      }

      .form-group input {
        width: 100%;
        padding: 12px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.3s ease;
      }

      .form-group input:focus {
        outline: none;
        border-color: #4facfe;
        box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.1);
      }

      .btn {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: transform 0.2s ease;
      }

      .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(79, 172, 254, 0.3);
      }

      .btn-secondary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }

      .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-weight: bold;
      }

      .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
      }

      .alert-error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }

      .schools-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }

      .school-card {
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
      }

      .school-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
      }

      .school-name {
        font-size: 1.3em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }

      .school-address {
        color: #666;
        margin-bottom: 15px;
        line-height: 1.4;
      }

      .school-coords {
        display: flex;
        justify-content: space-between;
        background: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        font-size: 0.9em;
        color: #555;
      }

      .coord-item {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .coord-label {
        font-weight: bold;
        margin-bottom: 5px;
      }

      .empty-state {
        text-align: center;
        padding: 50px;
        color: #666;
      }

      .empty-state i {
        font-size: 3em;
        margin-bottom: 20px;
        color: #ccc;
      }

      @media (max-width: 768px) {
        .nav-tabs {
          flex-direction: column;
        }

        .schools-grid {
          grid-template-columns: 1fr;
        }

        .header h1 {
          font-size: 2em;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>üè´ School Management System</h1>
        <p>Add schools and find the nearest ones to your location</p>
      </div>

      <div class="nav-tabs">
        <button class="nav-tab active" onclick="switchTab('add-school')">
          ‚ûï Add School
        </button>
        <button class="nav-tab" onclick="switchTab('list-schools')">
          üìã All Schools
        </button>
        <button class="nav-tab" onclick="switchTab('nearest-schools')">
          üìç Find Nearest
        </button>
      </div>

      <!-- Add School Tab -->
      <div id="add-school" class="tab-content active">
        <% if (message) { %>
        <div class="alert alert-success">‚úÖ <%= message %></div>
        <% } %> <% if (error) { %>
        <div class="alert alert-error">‚ùå <%= error %></div>
        <% } %>

        <div class="form-section">
          <h2 style="margin-bottom: 20px; color: #333">Add New School</h2>
          <form action="/addSchool" method="POST">
            <div class="form-group">
              <label for="name">School Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Enter school name"
              />
            </div>

            <div class="form-group">
              <label for="address">Address</label>
              <input
                type="text"
                id="address"
                name="address"
                required
                placeholder="Enter school address"
              />
            </div>

            <div
              style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px"
            >
              <div class="form-group">
                <label for="latitude">Latitude</label>
                <input
                  type="number"
                  id="latitude"
                  name="latitude"
                  step="any"
                  required
                  placeholder="e.g., 40.7128"
                />
              </div>

              <div class="form-group">
                <label for="longitude">Longitude</label>
                <input
                  type="number"
                  id="longitude"
                  name="longitude"
                  step="any"
                  required
                  placeholder="e.g., -74.0060"
                />
              </div>
            </div>

            <button type="submit" class="btn">Add School</button>
            <button
              type="button"
              class="btn btn-secondary"
              onclick="getCurrentLocation()"
            >
              üìç Use My Location
            </button>
          </form>
        </div>
      </div>

      <!-- List Schools Tab -->
      <div id="list-schools" class="tab-content">
        <h2 style="margin-bottom: 20px; color: #333">
          All Schools (<%= schools.length %>)
        </h2>

        <% if (schools.length > 0) { %>
        <div class="schools-grid">
          <% schools.forEach(function(school) { %>
          <div class="school-card">
            <div class="school-name"><%= school.name %></div>
            <div class="school-address">üìç <%= school.address %></div>
            <div class="school-coords">
              <div class="coord-item">
                <div class="coord-label">Latitude</div>
                <div><%= school.latitude %></div>
              </div>
              <div class="coord-item">
                <div class="coord-label">Longitude</div>
                <div><%= school.longitude %></div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div style="font-size: 3em; margin-bottom: 20px">üè´</div>
          <h3>No schools found</h3>
          <p>Add your first school to get started!</p>
        </div>
        <% } %>
      </div>

      <!-- Nearest Schools Tab -->
      <div id="nearest-schools" class="tab-content">
        <h2 style="margin-bottom: 20px; color: #333">Find Nearest Schools</h2>

        <div class="form-section">
          <div
            style="
              display: grid;
              grid-template-columns: 1fr 1fr auto;
              gap: 15px;
              align-items: end;
            "
          >
            <div class="form-group">
              <label for="userLat">Your Latitude</label>
              <input
                type="number"
                id="userLat"
                step="any"
                placeholder="e.g., 40.7128"
              />
            </div>

            <div class="form-group">
              <label for="userLon">Your Longitude</label>
              <input
                type="number"
                id="userLon"
                step="any"
                placeholder="e.g., -74.0060"
              />
            </div>

            <div class="form-group">
              <button type="button" class="btn" onclick="findNearestSchools()">
                Find Schools
              </button>
            </div>
          </div>

          <button
            type="button"
            class="btn btn-secondary"
            style="margin-top: 10px"
            onclick="getLocationForSearch()"
          >
            üìç Use My Current Location
          </button>
        </div>

        <div id="nearest-results"></div>
      </div>
    </div>

    <script>
      function switchTab(tabId) {
        // Hide all tab contents
        const tabContents = document.querySelectorAll(".tab-content");
        tabContents.forEach((content) => content.classList.remove("active"));

        // Remove active class from all tabs
        const tabs = document.querySelectorAll(".nav-tab");
        tabs.forEach((tab) => tab.classList.remove("active"));

        // Show selected tab content
        document.getElementById(tabId).classList.add("active");

        // Add active class to clicked tab
        event.target.classList.add("active");
      }

      function getCurrentLocation() {
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(
            function (position) {
              document.getElementById("latitude").value =
                position.coords.latitude;
              document.getElementById("longitude").value =
                position.coords.longitude;
              alert("Location detected successfully!");
            },
            function (error) {
              alert("Error getting location: " + error.message);
            }
          );
        } else {
          alert("Geolocation is not supported by this browser.");
        }
      }

      function getLocationForSearch() {
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(
            function (position) {
              document.getElementById("userLat").value =
                position.coords.latitude;
              document.getElementById("userLon").value =
                position.coords.longitude;
              alert('Location detected! Click "Find Schools" to search.');
            },
            function (error) {
              alert("Error getting location: " + error.message);
            }
          );
        } else {
          alert("Geolocation is not supported by this browser.");
        }
      }

      function findNearestSchools() {
        const lat = document.getElementById("userLat").value;
        const lon = document.getElementById("userLon").value;

        if (!lat || !lon) {
          alert("Please enter your coordinates or use current location");
          return;
        }

        fetch(`/api/nearest?latitude=${lat}&longitude=${lon}`)
          .then((response) => response.json())
          .then((data) => {
            const resultsDiv = document.getElementById("nearest-results");

            if (data.success && data.schools.length > 0) {
              let html =
                '<h3 style="margin: 20px 0; color: #333;">Nearest Schools (sorted by distance)</h3>';
              html += '<div class="schools-grid">';

              data.schools.forEach((school) => {
                html += `
                                <div class="school-card">
                                    <div class="school-name">${
                                      school.name
                                    }</div>
                                    <div class="school-address">üìç ${
                                      school.address
                                    }</div>
                                    <div class="school-coords">
                                        <div class="coord-item">
                                            <div class="coord-label">Distance</div>
                                            <div style="color: #4facfe; font-weight: bold;">${school.distance.toFixed(
                                              2
                                            )} km</div>
                                        </div>
                                        <div class="coord-item">
                                            <div class="coord-label">Lat, Lon</div>
                                            <div>${school.latitude}, ${
                  school.longitude
                }</div>
                                        </div>
                                    </div>
                                </div>
                            `;
              });

              html += "</div>";
              resultsDiv.innerHTML = html;
            } else if (data.success && data.schools.length === 0) {
              resultsDiv.innerHTML = `
                            <div class="empty-state">
                                <div style="font-size: 3em; margin-bottom: 20px;">üîç</div>
                                <h3>No schools found</h3>
                                <p>Add some schools first to find the nearest ones!</p>
                            </div>
                        `;
            } else {
              resultsDiv.innerHTML = `
                            <div class="alert alert-error">
                                Error: ${data.error || "Failed to find schools"}
                            </div>
                        `;
            }
          })
          .catch((error) => {
            document.getElementById("nearest-results").innerHTML = `
                        <div class="alert alert-error">
                            Error connecting to server: ${error.message}
                        </div>
                    `;
          });
      }
    </script>
  </body>
</html>
